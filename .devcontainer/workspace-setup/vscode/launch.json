    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Cosign ('Keyless' Sign)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/cosign",
            "args": [ "sign", "-f", "${input:container}" ],
            "env": {
                "COSIGN_EXPERIMENTAL": "1"
            }
        },
    ],
    "inputs": [
        {
            "id": "container",
            "type": "promptString",
            "description": "name of the container to sign",
            // "default": "container name"
        },
    ]
}